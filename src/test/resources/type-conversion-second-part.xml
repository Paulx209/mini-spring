<?xml version="1.0" encoding="UTF-8"?>
<beans xmlns="http://www.springframework.org/schema/beans"
       xmlns:xsi="http://www.w3.org/2001/XMLSchema-instance"
       xmlns:context="http://www.springframework.org/schema/context"
       xsi:schemaLocation="http://www.springframework.org/schema/beans http://www.springframework.org/schema/beans/spring-beans-4.0.xsd
       http://www.springframework.org/schema/context
	   http://www.springframework.org/schema/context/spring-context-4.0.xsd">

    <context:component-scan base-package="com.sonicge.beans.factory.bean"/>

    <bean id="car" class="com.sonicge.beans.factory.bean.Car">
        <property name="price" value="10000000"/>
        <property name="produceDate" value="2021 - 01 - 01"/>
    </bean>

    <bean class="com.sonicge.beans.factory.PropertyPlaceholderConfigurer">
        <property name="location" value="classpath:car.properties"/>
    </bean>

    <bean id="conversionService" class="com.sonicge.context.support.ConversionServiceFactoryBean">
        <property name="converters" ref="converters"/>
    </bean>

    <bean id="converters" class="com.sonicge.beans.factory.common.ConverterFactoryBean">
    </bean>

</beans>
